import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;

public class Solution {

    public static void main(String[] args) {
       Scanner scan=new Scanner(System.in);
        int a=scan.nextInt();
         int b=scan.nextInt();
         int c=scan.nextInt();
         int d=scan.nextInt();
         int e=scan.nextInt();
        int perimeter=c+d+e;
        System.out.printf("Area of Triangle is %.2f" ,((float)1/2*a*b));
        System.out.printf("\nPerimeter of Triangle is %.2f" ,(float)perimeter);
        
    }
}
